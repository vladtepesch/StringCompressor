{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: gcc.exe Aktive Datei kompilieren",
      "command": "C:\\strawberry-perl\\c\\bin\\gcc.exe",
      "args": [
        "-fdiagnostics-color=always",
        "-Wall", "-Wextra", "-Wpedantic",
        "-g",
        "${fileDirname}\\**.c",
            //"${fileDirname}\\**.h",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Vom Debugger generierte Aufgabe."
    }
  ],
  "version": "2.0.0"
}